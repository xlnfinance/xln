  :global(.dropdown-item.indent-1) {
    padding-left: 24px;
  }

  :global(.dropdown-item.indent-2) {
    padding-left: 36px;
  }

  :global(.dropdown-search-container) {
    padding: 8px;
    border-bottom: 2px solid #555;
    background: #252525;
  }

  :global(.dropdown-search-input) {
    width: 100%;
