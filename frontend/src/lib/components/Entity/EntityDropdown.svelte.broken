    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    min-width: 300px;
    transition: all 0.2s ease;
  }

  .unified-dropdown-btn:hover {
    background: #404040;
    border-color: #007acc;
  }

  .dropdown-icon {
    font-size: 16px;
  }

  .dropdown-text {
    flex: 1;
