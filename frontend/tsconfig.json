{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"moduleResolution": "bundler",
		"types": ["svelte", "vite/client", "node"], // Avoid picking up stubbed @types (e.g., glob/minimatch) from repo root

		// STRICTEST RULES FOR FINANCIAL SYSTEM
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictBindCallApply": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"exactOptionalPropertyTypes": true,

		// CATCH ERRORS EARLY
		"noUnusedLocals": false, // Disabled for /view (WIP)
		"noUnusedParameters": false, // Disabled for /view (WIP)
		"noFallthroughCasesInSwitch": true,
		"noPropertyAccessFromIndexSignature": true,

		// SAFETY
		"allowUnreachableCode": false,
		"allowUnusedLabels": false
	}
}
