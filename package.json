{
  "name": "xlnfinance",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "./dev-full.sh",
    "dev:ci": "./dev-ci.sh",
    "serve": "bun run serve.ts",
    "serve:dev": "bun build src/server.ts --target browser --outfile dist/server.js --bundle && bun run serve.ts",
    "notify:done": "bash ./scripts/notify.sh 'Task complete' 'XLN Agent' 'All done'",
    "notify:fail": "bash ./scripts/notify.sh 'Task failed' 'XLN Agent' 'Check logs' 'Basso'",
    "ui:dev": "cd ui && bun run dev",
    "ui:build": "cd ui && bun run build && bash ../scripts/notify.sh 'UI build complete' 'XLN Agent' 'ui/dist ready'",
    "test:e2e:notify": "bunx playwright test && bash ./scripts/notify.sh 'E2E passed' 'XLN Agent' || bash ./scripts/notify.sh 'E2E failed' 'XLN Agent' 'See report' 'Basso'",
    "test:e2e": "playwright test",
    "tutorial": "npx playwright test e2e/tutorial-working-demo.spec.ts",
    "tutorial:headed": "HEADED=true npx playwright test e2e/tutorial-working-demo.spec.ts",
    "tutorial:demo": "npx playwright test e2e/tutorial-working-demo.spec.ts",
    "tutorial:demo:headed": "HEADED=true npx playwright test e2e/tutorial-working-demo.spec.ts",
    "generate:tutorials": "bun run e2e/tutorial-documentation-generator.ts",
    "dev:quick": "./dev-quick.sh",
    "dev:watch": "./dev-watch.sh",
    "dev:reset": "./reset-networks.sh",
    "test": "cd contracts && npx hardhat test",
    "build:static": "cd frontend && bun run build:static && echo 'âœ… Static build complete for GitHub Pages'",
    "build:legacy": "cp index.html dist/legacy.html && echo 'âœ… Legacy index.html copied to dist/'",
    "build:deploy": "mkdir -p dist && npm run build:static && npm run build:legacy && echo 'ðŸš€ Ready for GitHub Pages deployment'",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:governance": "cd contracts && npx hardhat test --grep governance",
    "test:entity": "cd contracts && npx hardhat test --grep entity",
    "test:old": "NODE_OPTIONS=\"--loader ts-node/esm\" npx mocha src/test/merkle.test.ts --timeout 60000 --exit",
    "test:all": "NODE_OPTIONS=\"--loader ts-node/esm\" mocha 'src/test/**/*.ts' --timeout 30000 --exit",
    "test:merkle": "NODE_OPTIONS=\"--loader ts-node/esm\" npx mocha src/test/merkle.test.ts --timeout 60000 --exit",
    "test:user": "rm -rf local-storage;mocha -r ts-node/register src/test/user.test.ts --timeout 10000 --exit",
    "test:channel": "rm -rf local-storage;mocha -r ts-node/register src/test/channel.test.ts --timeout 10000 --exit",
    "test:directpayment": "rm -rf local-storage;mocha -r ts-node/register src/test/directpayment.test.ts --timeout 30000 --exit",
    "test:onionpayment": "rm -rf local-storage;mocha -r ts-node/register src/test/onionpayment.test.ts --timeout 20000 --exit",
    "test:high": "rm -rf local-storage;mocha -r ts-node/register src/test/highload.test.ts --timeout 120000 --exit",
    "test:swap": "rm -rf local-storage;mocha -r ts-node/register src/test/swap.test.ts --timeout 20000 --exit",
    "test:network": "rm -rf local-storage;mocha -r ts-node/register src/test/network.test.ts --timeout 10000 --exit",
    "test:transition": "mocha -r ts-node/register src/test/transition.test.ts --timeout 10000 --exit",
    "test:section": "mocha -r ts-node/register src/test/section.test.ts --timeout 60000 --exit",
    "test:derive": "mocha -r ts-node/register src/test/derive.test.ts --timeout 10000 --exit",
    "t2": "tsc && ts-node src/test/derive.test.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "env:build": "cd ./contracts && npx hardhat compile",
    "env:run": "cd ./contracts && npx hardhat node",
    "env:deploy": "cd ./contracts && npx hardhat ignition deploy ignition/modules/Depository.ts  --network localhost",
    "format": "prettier --write ./src",
    "check": "prettier --check ./src",
    "lint": "eslint ./src",
    "docs:governance": "echo 'See docs/governance-architecture.md for comprehensive governance documentation'",
    "demo": "echo 'See docs/governance-architecture.md for governance demo and examples'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@playwright/test": "^1.47.2",
    "@tsconfig/node20": "^20.1.4",
    "@types/minimatch": "^6.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "chai-as-promised": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "hardhat": "^2.22.5",
    "mocha": "^10.8.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "argon2": "^0.43.1",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "ethers": "^6.13.1",
    "jdenticon": "^3.3.0",
    "js-sha3": "^0.9.3",
    "level": "^8.0.1",
    "merkletreejs": "^0.4.0",
    "msgpackr": "^1.11.5",
    "ws": "^8.17.0",
    "xlnfinance-contracts": "file:contracts"
  },
  "type": "module"
}
